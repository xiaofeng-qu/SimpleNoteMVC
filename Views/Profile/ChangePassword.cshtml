@model SimpleNote.Dto.UserForgotPasswordDto

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { id = "forgotPasswordForm" }))
{
    <div class="container" style="margin-top:100px;">
        <div class="row">
            <div class="col-md-offset-3 col-md-6 well well-lg" style="background-color: rgba(245,245,245,.8)">
                <h1>Forgot password</h1>
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "sr-only", @for = "forgotPasswordEmail" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", Name = "forgotPasswordEmail", id = "forgotPasswordEmail", placeholder = "Email", maxlength = "50" })
                </div>
                <div style="text-align:right;">
                    @Html.ActionLink("Register", "Signup", "Home", new { area = "" }, new { @class = "btn btn-default pull-left" })
                    <input type="submit" name="login" class="btn orange" value="Submit">
                    @Html.ActionLink("Cancel", "Index", "Home", new { area = "" }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}
