@model SimpleNote.Dto.UserLoginDto

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "loginForm" }))
{
    <div class="container" style="margin-top:100px;">
        <div class="row">
            <div class="col-md-offset-3 col-md-6 well well-lg" style="background-color: rgba(245,245,245,.8)">
                <h1>Login</h1>
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "sr-only", @for = "loginEmail" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "loginEmail", Name = "Email", placeholder = "Email", maxlength = "50" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "sr-only", @for = "loginPassword" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "loginPassword", Name = "Password", placeholder = "Password", maxlength = "30" })
                </div>
                <div class="checkbox">
                    @*<label>
                        <input type="checkbox" name="rememberMe" id="rememberMe">
                        Remember me
                    </label>*@
                    @Html.ActionLink("Forgot password", "ForgotPassword", "Home", new { area = "" }, new { @class = "" })
                </div>
                <div style="text-align:right;">
                    @Html.ActionLink("Register", "Signup", "Home", new { area = "" }, new { @class = "btn btn-default pull-left" })
                    <input type="submit" name="login" class="btn orange" value="Login">
                    @Html.ActionLink("Cancel", "Index", "Home", new { area = "" }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}